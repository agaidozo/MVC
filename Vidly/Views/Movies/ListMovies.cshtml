@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "ListMovies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@Html.ActionLink("New Movie", "New", "Movies", null, new { @class = "btn btn-primary", style = "margin-bottom: 10px;" })

<br />

@if (!Model.Any())
{
    <p>We don't have any movies yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movies in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(movies.Name, "Edit", "Movies", new { id = movies.Id }, null)
                    </td>
                    <td>
                        @movies.Genre.Name
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

