@model Vidly.ViewModels.ListMoviesViewModel
@{
    ViewBag.Title = "ListMovies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (Model.MoviesList.Count == 0)
{
    <p>We don't have any movies yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movies in Model.MoviesList)
            {
                <tr>
                    <td>
                        @movies.Name
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

